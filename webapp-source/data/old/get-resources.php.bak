<?php

// returns all markers in database formated as xml document

$link=mysql_connect("localhost", "lukasber_tvb", "tvb") or die ('I cannot connect to the database because: ' . mysql_error());
$success = mysql_select_db("lukasber_theveggiebox", $link);

$query = ' 	SELECT *
			FROM `marker`
			LIMIT 0 , 30 ';

$result = mysql_query($query, $link);


header('Content-Type: text/xml');

print('<markers>' . "\n");
while ($row = mysql_fetch_assoc($result)) {
    
	print('  <marker lat="' . $row["lat"]
		. '" lng="' . $row["lng"]
		. '" name="' . $row["title"]
		. '" description="' . $row["description"]
		. '" label="' . $row["name"]
		. '" type="' . $row["type"]
		. '" subtype="' . $row["subtype"]
		. '" www="' . $row["www"]
		. '" rss="' . $row["rss"]
		. '"/>' . "\n");
}
print('</markers>' . "\n");

?>
